
<%= simple_form_for(@about) do |f| %>


  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description,input_html:{rows:6} %>
    <%= f.input :quote %>
    <%= f.input :fb_link %>
    <%= f.input :ig_link %>
    <%= f.input :twitter_link %>
    <%= f.association :user ,as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit ,:class=>"btn btn-success"%>
    <%= link_to 'Back', abouts_path ,:class=>"btn btn-info"%>
  </div>
<% end %>
